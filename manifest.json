{
  "manifest_version": 3,
  "name": "Web Highlighter",
  "version": "1.0",
  "description": "Highlight text on web pages and PDFs",
  "permissions": ["activeTab", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["pdf.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
